    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'node' in bootnode mode",
            "cargo": {
                "args": [
                    "run",
                    "--bin=node",
                    "--package=node"
                ],
                "filter": {
                    "name": "node",
                    "kind": "bin"
                }
            },
            "args": [
        "--bootnode",
        "true",
    ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'node' in sync mode",
            "cargo": {
                "args": [
                    "run",
                    "--bin=node",
                    "--package=node"
                ],
                "filter": {
                    "name": "node",
                    "kind": "bin"
                }
            },
            "args": [
        "--sync",
        "true",
        "---peer",
         "/ip_address/bootnode_id",
    ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'node'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=node",
                    "--package=node"
                ],
                "filter": {
                    "name": "node",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}